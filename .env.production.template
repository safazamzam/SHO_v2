# Production Environment Variables for HTTPS Deployment
# Copy this file to .env.production and fill in your actual values

# Domain Configuration
DOMAIN_NAME=your-domain.com
CERTBOT_EMAIL=admin@your-domain.com

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://username:password@db:5432/shifthandover
POSTGRES_DB=shifthandover
POSTGRES_USER=shifthandover_user
POSTGRES_PASSWORD=secure_database_password

# Secrets Management
SECRETS_MASTER_KEY=your-fernet-encryption-key-here

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
TEAM_EMAIL=team@your-domain.com

# ServiceNow Integration
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=servicenow_user
SERVICENOW_PASSWORD=servicenow_password
SERVICENOW_ENABLED=true

# SSO Configuration
SSO_ENCRYPTION_KEY=your-sso-encryption-key-here

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Application Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log