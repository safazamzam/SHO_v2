# Production Environment Configuration for HTTPS Deployment
# Copy this to .env.production and fill in your actual values

# Domain Configuration - REQUIRED
DOMAIN_NAME=your-domain.com
CERTBOT_EMAIL=your-email@domain.com

# Database Configuration
MYSQL_PASSWORD=your_secure_mysql_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Flask Application Security
SECRET_KEY=your_very_secure_secret_key_64_characters_minimum_here
SECRETS_MASTER_KEY=your_secrets_master_key_32_characters_base64_encoded

# Database URL
DATABASE_URL=mysql+pymysql://app_user:your_secure_mysql_password_here@db/shift_handover

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your_app_specific_password
TEAM_EMAIL=your-email@gmail.com

# Google OAuth Configuration (if using SSO)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# SSO Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
SSO_ENCRYPTION_KEY=your_base64_encoded_sso_encryption_key

# ServiceNow Configuration (optional)
SERVICENOW_INSTANCE=your-company.service-now.com
SERVICENOW_USERNAME=your_servicenow_username
SERVICENOW_PASSWORD=your_servicenow_password
SERVICENOW_ENABLED=true

# Application Configuration
FLASK_ENV=production
APP_DOMAIN=your-domain.com
APP_BASE_URL=https://your-domain.com

# Security Settings
FORCE_HTTPS=true
SECURE_HEADERS=true

